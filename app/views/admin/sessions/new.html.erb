<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col col-lg-5">
      

        <div class="text-center mt-5">
          <h2>管理者サインイン</h2>
        </div>



        <%= form_with model: @admin, url: session_path(resource_name) do |f| %>
          <div class="col col-md-12 col-sm-12 mt-5">
            <%= f.label :email,"メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control"%>
          </div>

          <div class="col col-md-12 col-sm-12 mt-3">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password",class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="col mt-2">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "記憶する" %>
            </div>
          <% end %>

          <div class="actions col mt-3">
            <%= f.submit "サインイン", class:"btn btn-success" %>
          </div>
        <% end %>
      
    </div>
  </div>
</div>