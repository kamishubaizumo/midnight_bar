<div class="container-fluid">

  <div class="text-center my-5">
    <p class="admin-nav"><%= link_to "管理者ホーム", admin_root_path %> | <%= link_to "タグ一覧に戻る", admin_tags_path %></p>
  </div>

  
  <div class="text-center my-5">
    <h2>タグ編集</h2>
  </div>

  <%= form_with model: @tag, url: admin_tag_path ,method: :patch do |f| %>
      <div class="text-center"><small class="note-text">複数のタグは登録できません</small></div>
      <div class="row justify-content-center">
        <div class="col col-md-4 my-3">
          <%= f.text_field :tag_name, class:"form-control" %>
        </div>
        <div class="col-md-1 my-3 text-center">
          <%= f.submit "更新", class:"btn btn-primary" %>
        </div>  
      </div>
  <% end %>
</div>