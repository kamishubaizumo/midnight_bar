<div class="container-fluid">
  <div class="text-center my-5">
    <h2><%= @tag.tag_name %>の商品一覧</h2>
  </div>

  <!--画面右に固定する-->
  <div id="position-right">
    <a class="button-link"><div id="modal-open" class="right-menu">タグ一覧</div></a>
    <a href="#"><div id="top-upper" class="right-menu">TOPへ</div></a>
  </div>

  <!--タグ一覧はモーダルウィンドウで表示する-->
  <div id="modal-tag">
    <p id="modal-close"><a class="button-link py-3">閉じる</a></p>
  

    <div class="col">
      <% @tag_list.each do |tag_list| %>
        <span class="div-tag">
          <span class="nomal-tag">
            <%= link_to tag_list.tag_name, search_tag_admin_items_path(tag_id: tag_list.id) %>
          </span>
          <span class="tag-count">
            <%= "(#{tag_list.items.count})" %>
          </span>
        </span>
      <% end %>
    </div>
  </div>

  
  <div class="row">

    <div class="col">
      <% @items.each do |item| %>

        <%= link_to admin_item_path(item) do %>
          <div class="col-sm-3">
          <% if item.image.attached? %>
            <%= image_tag item.image, size: "auto", class: "w-100" %>
          <% else %>
            <%= image_tag 'no-image', size: "auto", class: "w-100" %>
          <% end %>
          <%= item.item_name %>
          </div>
        <% end %>
        <%= item.item_text %>
        在庫数:<%= item.stock %>


        <% item.tags.each do |tag| %>
        <span class="div-tag">
          <span class="nomal-tag">
            <%= link_to tag.tag_name, search_tag_admin_items_path(tag_id: tag.id) %>
          </span>
        </span>
      <% end %>

      <% end %>
    </div>
  </div>

</div>





