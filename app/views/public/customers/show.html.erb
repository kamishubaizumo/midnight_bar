<div class="background">
  <div class="container">
    <div class="my-card">
      <div class="my-card-header">
      </div>
      <div class="my-card-body">
        <h3 class="my-card-title text-center">会員証</h3>
        <div class="my-card-content">
          <p> 氏名: <%= @customer.last_name %>&nbsp;<%= @customer.first_name %></p>
        </div>
        <div class="my-card-content">
          <p> シメイ: <%= @customer.last_name_kana %>&nbsp;<%= @customer.first_name_kana %></p>
        </div>
        <div class="my-card-content">
          <p>  生年月日: <%= @customer.birth.strftime("%Y年%m月%d日") %>&nbsp;/&nbsp; 年齢：<%= @customer.age %>歳</p>
        </div>
        <div class="my-card-content">
          <p> 電話番号: <%= @customer.tel_number %> &nbsp;/&nbsp; メールアドレス<%= @customer.email %></p>
        </div>
        <div class="my-card-content">
          <p> 郵便番号: <%= @customer.postcode %></p>
        </div>
        <div class="my-card-content">
          <p> 住所: <%= @customer.join_address %></p>
        </div>
        
      </div>
    </div>
  </div>
</div>
