<div class="container-fluid">
  <div class="text-center mt-5">
    <h2>会員ログイン</h2>
  </div>

  <div class="row justify-content-center mt-5">
    <div class="col col-md-4 mt-3">

          <%= form_with model: @customer, url: new_customer_session_path do |f| %>
            <div class="field mt-3">
              <%= f.label :email,"メールアドレス" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="field mt-3">
              <%= f.label :password ,"パスワード"%>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field mt-2">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "パスワードを記録する" %>
              </div>
            <% end %>

            <div class="row col-lg-12 my-5">
              <div class="actions col">
                <%= button_tag type: 'submit', class: "btn btn-primary" do %>
                  <i class="fas fa-beer"></i>ログイン
                <% end %>

              </div class="col">
                <%= link_to new_registration_path(resource_name) do %>
                  <i class="fas fa-glass-cheers"></i>新規会員登録はこちら
                <% end %>
            </div>
          <% end %>

    </div>
  </div>
</div>


