<div class="container-fluid">
<div class="col text-center mt-5">
  <h2>新規会員登録</h2>
</div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row col-lg-8">
    <div class="field col-sm-5 col-md-5">
      <%= f.label :last_name,"姓" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "name", class:"form-control" %>
    </div>

    <div class="field col-sm-5 col-md-5">
      <%= f.label :first_name,"名" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "name", class:"form-control"  %>
    </div>
  </div>

  <div class="row col-lg-8">
    <div class="field col-sm-5 col-md-5">
      <%= f.label :last_name_kana,"セイ" %>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "name", class:"form-control" %>
    </div>

    <div class="field col-sm-5 col-md-5">
      <%= f.label :first_name_kana,"メイ" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name", class:"form-control"  %>
    </div>
  </div>

  <div class="row col-lg-8 mt-3">
    <div class="field col-4 text-center">
      <%= f.label :birth,"生年月日" %> &nbsp;
      <%= f.date_select :birth, 
      use_month_numbers: true,start_year: 1930,end_year: (Time.now.year - 20), default: Date.new(1980, 1, 1) %>
    </div>
  </div>

  <div class="row col-lg-8">
    <div class="field col-sm-5 col-md-5">
      <%= f.label :post_code,"郵便番号" %>
      <%= f.text_field :post_code, autofocus: true, id: "prefecture", placeholder:"00000000",class:"form-control" %>
    </div>
  </div>


    <div class="row col-lg-8">
    <div class="field col-sm-5 col-md-5">
      <%= f.label :prefecture_name, "住所1" %>
      <%= f.text_field :prefecture_code, autofocus: true, id: "address", placeholder:"",class:"form-control" %>
    </div>
  </div>
  
  <div class="row col-lg-8">
    <div class="field col-sm-5 col-md-5">
      <%= f.label :other_address, "アパート" %>
      <%= f.text_field :other_address, autofocus: true, id: "address", placeholder:"千葉県千葉市中央区0-0",class:"form-control" %>
    </div>
  </div>


  <div class="field mt-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field mt-2">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"確認パスワード" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>



<%= render "public/shared/links" %>
</div>